/**
 * exemplo switch case
 * @author SamuelGadelha
 */

const input = require('readline-sync')

let face

console.clear()

console.log(" jogo do dado")
input.question(" pressione a tecla [Enter] para jogar o Dado")
face = Math.floor(Math.random() * 6) 
console.log(`face do dado: ${face}`)
switch (face) {
    case 0:
        console.clear()
        console.log("face 1 ⚀")
        break

    case 1:
        console.clear()
        console.log("face 2 ⚁")
        break
    case 2:
        console.clear()
        console.log("face 3 ⚂")
        break
    case 3:
        console.clear()
        console.log("face 4 ⚂")
        break
    case 4:
        console.clear()
        console.log("face 5⚃")
        break
    case 5:
        console.clear()
        console.log("face 6 ⚄")
        break

}
